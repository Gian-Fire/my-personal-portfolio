  <body>
    <div class='col-md-6 card mx-auto' style='color: maroon; margin: 20px; '>
      <div class='card-header text-center'>
        <font size='6'>Contact Form</font size='6'>
      </div>

      <form action="/thanks" method="POST" class='form-group card-body'>
        <div style="padding-bottom: 20px">
          <label for="firstName">First Name:</label>
          <input id="firstName" name="firstName" type="text" class='form-control'>

          <label for="lastName">Last Name:</label>
          <input id="lastName" name="lastName" type="text" class='form-control'>

          <label for="email">Email:</label>
          <input id="email" name="email" type="text" class='form-control'>

          <label for="company">Company:</label>
          <input id="company" name="company" type="text" class='form-control'>

          <label for="subject">Subject:</label>
          <input id="subject" name="subject" type="text" class='form-control'>

          <label for="text">Message:</label>
          <textarea id="text" name="text" type="text" class='form-control'></textarea>
        </div>
        <button type="submit" class='form-control btn-danger'>Submit</button>
      </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
